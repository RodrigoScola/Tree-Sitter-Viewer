{
	"publisher": "rodrigoscola",
	"name": "tree-viewer",
	"displayName": "Tree Sitter Viewer",
	"description": "A tree Sitter viewer for the popular parser Tree Sitter",
	"repository": {
		"url": "https://github.com/RodrigoScola/Tree-Sitter-Viewer"
	},
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.94.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "tree-viewer.tree_view",
				"title": "Open new window on the current document or selection",
				"shortTitle": "New Tree Sitter View Window"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.8",
		"@types/node": "20.x",
		"@types/vscode": "^1.94.0",
		"@typescript-eslint/eslint-plugin": "^8.7.0",
		"@typescript-eslint/parser": "^8.7.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"eslint": "^9.11.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"web-tree-sitter": "^0.24.3",
		"winston": "^3.15.0"
	}
}

